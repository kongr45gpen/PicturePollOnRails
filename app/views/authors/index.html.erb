<h1>Listing authors</h1>

<table>
    <tr>
        <th>Slug</th>
        <th>Name</th>
        <th colspan="3"></th>
    </tr>

    <% @authors.each do |author| %>
        <tr>
            <td><%= author.slug %></td>
            <td><%= author.name %></td>
            <td><%= link_to 'Show', author_path(author) %></td>
            <td><%= link_to 'Edit', edit_author_path(author) %></td>
            <td><%= link_to 'Destroy', author_path(author),
                                       method: :delete,
                                       data: { confirm: 'Are you sure?' } %>
            </td>
        </tr>
    <% end %>
</table>

<p><%= link_to 'New author', new_author_path %></p>
