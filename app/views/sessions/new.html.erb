<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="ui two column middle aligned relaxed grid basic segment">
  <div class="column">
    <%= form_for :session, url: sessions_path do |f| %>

        <div class="ui top attached form segment">

        <div class="field">
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>

      </div>

      <%= f.submit "Sign in", class: "ui bottom attached button" %>

    <% end %>
  </div>

  <div class="ui inverted vertical divider">
    Or
  </div>
  <div class="center aligned column">
    <%= link_to signup_path, class: "huge green ui labeled icon button" do %>
      <i class="signup icon"></i> Sign Up
    <% end %>
    </div>
  </div>
</div>
